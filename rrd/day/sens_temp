        --imginfo '<IMG SRC=pix_%%SENSDEV%%/%s WIDTH=%lu HEIGHT=%lu >'
	-a PNG
	-h 200 -w 500
	--lazy
	-s -1days
	-v "Temperature (degrees C)"
	-t %%CHARTDESC%%
	-x HOUR:1:HOUR:3:HOUR:6:0:'%b %d %H:00'
	-y 1:5
	DEF:temp=%%RRDDIR%%/sensors_%%SENSDEV%%.rrd:%%MONTERM%%:AVERAGE
	LINE2:temp#FF00FF>

